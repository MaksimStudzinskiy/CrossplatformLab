@model Lab1DataModel

@{
	ViewData["Title"] = "lab1";
}

<h1>@ViewData["Title"]</h1>
<text> &nbsp; &nbsp; &nbsp;</text>
<h2>The first line of the input file INPUT.TXT contains two integers - 1 ≤ N, M ≤ 109 - the lengths of the sides of the key. The second line contains a single integer - 1 ≤ K1 ≤ 500 - the number of holes in the first key.</h2>
<h2>This is followed by a description of the second key in the same format.</h2>
<h2>Output: a single integer - the maximum number of holes that Vasya can get.</h2>

<text> &nbsp; &nbsp; &nbsp;</text>

<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="Lab1">
	<div class="form-group">
		<label for="psize">Key side lengths</label>
		<input type="text" class="form-control" id="firstLine" asp-for="FirstLine">
	</div>
	<div class="form-group">
		<label for="psize">First holes</label>
		<input type="text" class="form-control" id="secondLine" asp-for="SecondLine">
	</div>
	<div class="form-group">
		<label for="psize">First key (divide rows by ';')</label>
		<input type="text" class="form-control" id="thirdLine" asp-for="ThirdLine">
	</div>
	<div class="form-group">
		<label for="psize">Second holes</label>
		<input type="text" class="form-control" id="fourthLine" asp-for="FourthLine">
	</div>
	<div class="form-group">
		<label for="psize">Second key (divide rows by ';')</label>
		<input type="text" class="form-control" id="fifthLine" asp-for="FifthLine">
	</div>
	<button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

<text> &nbsp; &nbsp; &nbsp;</text>
<text> &nbsp; &nbsp; &nbsp;</text>

@if (Model != null)
{
	<div class="container mt5">
		<div class="form-group">
			<h2 class="control-label">Out: @(Model != null ? Model.Calculated : string.Empty)</h2>
		</div>
		@if (Model != null && !string.IsNullOrEmpty(Model.ErrorValue))
		{
			<div class="row">
				<label for="perror"></label>
				<input type="text" id="perror" value="@Model.ErrorValue">
			</div>
		}
	</div>
}